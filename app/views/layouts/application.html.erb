<!DOCTYPE html>
<html>
<head>
  <title>Vote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href='https://fonts.googleapis.com/css?family=Erica+One' rel='stylesheet' type='text/css'>

  <!-- ################################# Tooltip ##########################-->
  <script>
        $(document).ready(function() {
            $('.tooltip').tooltipster();
        });
  </script>        
</head>
<body>

    
<div class="row">

  <% if browser.mobile? %>
    <div class="large-12 medium-12 small-12 columns" style = "padding: 0;">
      <div class = "center">
        <%= render 'layouts/navbar' %>        
        <%= yield %>
      </div>
    </div>

  <% else %>
    <div class="large-9 medium-12 small-12 columns" style = "padding: 0;">
      <%= render 'layouts/leftbar' %>
      <div class = "center">
        <%= render 'layouts/navbar' %>
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/rightbar' %>
  <% end %>
</div>


<div class="row">
  <div class="large-10 columns" style="padding-left: 100px;">
  <h5>&copy 2013-<%= Time.now.year %> voteyourview.com </h5>
  </div>
</div>

  


</body>


</html>

