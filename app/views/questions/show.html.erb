<p id="notice"><%= notice %></p>

<% f = @question %>


<pre>
  Posted by user: <%= f.user.email %>
  Question: <%= f.text %>
  Category: <%= f.category.category %> 

  Yes: <%= f.vote_details.where(yes: true).count %>
  No: <%= f.vote_details.where(yes: false).count %>

  <% if f.vote_details.where(ip: @ip).exists? %>

        You have already voted!

  <% else %>
    <%= link_to "Yes", makevote_path(question_id: f.id, yes: true, ip: @ip), method: "post" %>    
    <%= link_to "No", makevote_path(question_id: f.id, yes: false, ip: @ip), method: "post" %>
  <% end %>

  <%= form_for(@comment) do |a| %>
  <div class="actions">

    <% if user_signed_in? %>
      <%= a.label :Comment %>
      <%= a.text_field :text, class: 'form-control' %>
      </pre>

      <%= a.hidden_field :question_id, :value => f.id %>
      <%= a.hidden_field :user_id, :value => current_user.id %>
      <%= a.submit %>

    <% else %>
    <pre>
    Log in if you want to make a comment!!!
    </pre>
    <% end %>
  <% end %>
  </pre>

  <% @comments.each do |b| %>

  <pre>
    Username: <%= User.find_by(id: b.user_id).email %>
    Comment: <%= b.text %>
  </pre>

  <% end %>








